{
	"name": "grapes",
	"description": "",
	"version": "0.0.1",
	"publisher": "olivmonnier",
	"engines": {
		"vscode": "^1.33.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"*"
	],
	"preview": true,
	"main": "./out/extension/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "grapes.showPanel",
				"title": "Toggle Grapes panel"
			},
			{
				"command": "grapes.test",
				"title": "Grapes Test"
			}
		],
		"menus": {
			"editor/title": [
				{
					"when": "resourceLangId == html",
					"command": "grapes.showPanel",
					"alt": "grapes.showPanel",
					"group": "navigation"
				},
				{
					"when": "grapesViewFocus",
					"command": "grapes.test",
					"group": "navigation"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run build",
		"compile": "tsc  -p ./",
		"lint": "tslint -p ./",
		"watch": "tsc -watch -p ./src/extension --project ./tsconfig.json",
		"build-app": "webpack --env.production --config ./webpack.config.js",
		"build": "rimraf out && npm run compile && npm run build-app",
		"package-ext": "vsce package",
		"publish-ext": "vsce publish"
	},
	"dependencies": {
		"cheerio": "^1.0.0-rc.3"
	},
	"devDependencies": {
		"@babel/core": "^7.4.5",
		"@babel/preset-env": "^7.4.5",
		"@types/cheerio": "^0.22.11",
		"@types/node": "^10.5.2",
		"@types/vscode": "^1.32.0",
		"babel-loader": "^8.0.6",
		"clean-webpack-plugin": "^3.0.0",
		"css-loader": "^2.1.1",
		"grapesjs": "^0.14.62",
		"rimraf": "^2.6.3",
		"style-loader": "^0.23.1",
		"tslint": "^5.16.0",
		"typescript": "^3.4.5",
		"url-loader": "^1.1.2",
		"vsce": "^1.62.0",
		"vscode": "^1.1.34",
		"webpack": "^4.32.2",
		"webpack-cli": "^3.3.2"
	}
}
