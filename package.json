{
	"name": "grapes",
	"description": "",
	"version": "0.0.8",
	"publisher": "olivmonnier",
	"engines": {
		"vscode": "^1.35.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"*"
	],
	"preview": true,
	"main": "./out/extension/extension.js",
	"contributes": {
		"configuration": {
			"type": "object",
			"title": "Grapesjs panel configuration",
			"properties": {
				"grapesjs.delay": {
					"type": "number",
					"default": 1500,
					"description": "Delay to wait before render after a document change."
				},
				"grapesjs.pluginsFolder": {
					"type": "string",
					"default": "./",
					"description": "Path to your Grapesjs plugins folder"
				}
			}
		},
		"commands": [
			{
				"command": "grapesjs.showPanel",
				"title": "Toggle Grapesjs panel"
			},
			{
				"command": "grapesjs.export",
				"title": "Export in HTML/CSS"
			}
		],
		"menus": {
			"editor/title": [
				{
					"when": "resourceLangId == html",
					"command": "grapesjs.showPanel",
					"alt": "grapesjs.showPanel",
					"group": "navigation"
				},
				{
					"when": "grapesjsViewFocus",
					"command": "grapesjs.export",
					"group": "navigation"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run build",
		"compile": "tsc  -p ./",
		"lint": "tslint -p ./",
		"watch": "tsc -watch -p ./src/extension --project ./tsconfig.json",
		"build-app": "webpack --env.production --config ./webpack.config.js",
		"build": "rimraf out && npm run compile && npm run build-app",
		"package-ext": "vsce package",
		"publish-ext": "vsce publish"
	},
	"dependencies": {
		"cheerio": "^1.0.0-rc.3"
	},
	"devDependencies": {
		"@babel/core": "^7.4.5",
		"@babel/preset-env": "^7.4.5",
		"@types/cheerio": "^0.22.11",
		"@types/node": "^10.14.9",
		"@types/vscode": "^1.35.0",
		"babel-loader": "^8.0.6",
		"clean-webpack-plugin": "^3.0.0",
		"css-loader": "^2.1.1",
		"grapesjs": "^0.14.62",
		"rimraf": "^2.6.3",
		"style-loader": "^0.23.1",
		"tslint": "^5.17.0",
		"typescript": "^3.5.2",
		"url-loader": "^1.1.2",
		"vsce": "^1.63.0",
		"vscode": "^1.1.34",
		"webpack": "^4.34.0",
		"webpack-cli": "^3.3.4"
	}
}
